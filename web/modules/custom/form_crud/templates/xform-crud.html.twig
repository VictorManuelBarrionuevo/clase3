<form action="/form-crud/abm" method="post">

    <input type="hidden" name="form_type" value="{{ type }}">
    <input type="hidden" name="form_id" value="{{ id }}">

    <label for="nombre">First name: *</label><br>
    <input type="text" id="nombre" name="nombre" value="{{ form_data.nombre|default('') }}" required><br><br>

    <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike" {% if form_data.vehicle1 == 'Bike' %} checked {% endif %}>
    <label for="vehicle1">I have a bike</label><br>

    <input type="checkbox" id="vehicle2" name="vehicle2" value="Car" {% if form_data.vehicle2 == 'Car' %} checked {% endif %}>
    <label for="vehicle2">I have a car</label><br>

    <input type="checkbox" id="vehicle3" name="vehicle3" value="Boat" {% if form_data.vehicle3 == 'Boat' %} checked {% endif %}>
    <label for="vehicle3">I have a boat</label><br><br>

    <label for="email">Enter your email:</label>
    <input type="email" id="email" name="email" value="{{ form_data.email|default('') }}"><br><br>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="4" cols="50">{{ form_data.description|default('') }}</textarea><br>

    <label for="pwd">Password:</label>
    <input type="password" id="pwd" name="pwd" value="{{ form_data.pwd|default('') }}"><br>

    <input type="submit" value="Submit">
</form>
